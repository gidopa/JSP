    <!-- 톰캣서버가 실행될 때 커넥션풀 역할을 하는 datasource클래스의 객체생성 구문 설정 -->
    <!-- Resource태그의 속성
    	name = MemberDAO클래스에서 DataSource를 가져다 사용할 JNDI기술의 이름
    	auth = 이 DataSource커넥션풀 객체 자원을 실행할 인증주체 톰캣서버
    	type = 커넥션풀 자원 이름
    	driver = 연결한 데이터베이스 종류에따른 driver클래스의 경로
    	url = 접속할 DBMS서버의 ip주소와 포트번호 그리고 XE데이터베이스 식별 SID
    	username = dbms 아이디
    	password = dbms 비밀번호
    	maxActive = DB에 동시에 연결할 수 있는 Connection 객체의 갯수
    	maxWait = 새로운 연결이 생길때까지 기다리는 최대 시간
    	참고. 다른 속성들은 고정적으로 사용되며 주로 driverClassName, username, password, url 속성만 변경됨 
     -->
     <Resource  
     	name ="jdbc/oracle"
     	auth ="Container"
     	type = "javax.sql.DataSource"
     	driverClassName = "oracle.jdbc.OracleDriver"
     	url = "jdbc:oracle:thin:@localhost:1521:XE"
     	username = "scott"
     	password = "tiger"
     	maxActive = "50"
     	maxWait = "-1"
     />
     
</Context>